#include <iostream>
#include <string>
using namespace std;

class Pointer abstract {
protected:
	unsigned count;
	unsigned step;
public:
	Pointer() : count(0) {};
	Pointer(unsigned count) : count(0) {};

	virtual unsigned GetCount() const {
		return count;
	}
	virtual unsigned GetStep() const {
		return step;
	}

	virtual unsigned SetStep(unsigned step) {
		this->step = step;
	}

	virtual unsigned operator++() {
		unsigned temp = count;
		count += step;
		return temp;
	}
	virtual unsigned operator++(int) {
		count += step;
		return count;
	}
};

class Pointer_for_LLOC: public Pointer{
	
};

class FileAnalyze {

};

class ReadFile {
protected:
	string fp; //путь к файлу
	FileAnalyze analyze;
public:
	ReadFile(string fp) : fp(fp) {};
};

