#include <iostream>
using namespace std;

class Counter{
	int max = 100, min = 0;//диапазон
	int count = 0;//значение
	int step = 1;
public:
	Counter(){};
	~Counter(){};

	Counter(int, int);//указываем диапазон
	Counter(int);//значение
	Counter(int, int, int);//диапазон и значение
	Counter(int, int, int, int);//диапазон, значение, шаг

	int operator++();
	int operator++(int);
	int operator--();
	int operator--(int);
};

int main(void)
{

}

Counter::Counter(int count){this->count = count;}
Counter::Counter(int min, int max)
{
	this->min = min;
	this->max = max;
}
Counter::Counter(int count, int min, int max)
{
	this->count = count;
	this->min = min;
	this->max = max;
}
Counter::Counter(int count, int min, int max, int step)
{
	this->count = count;
	this->min = min;
	this->max = max;
	this->step = step;
}
int Counter::operator++(){
	if (count <= max+step) { return count += step }
	else
	{
		count = min;
		return count;
	}
}
int Counter::operator++(int x)
{
	int temp;
	temp = this->count;
	if (count != max) { count += step; }
	else count = min;

	return temp;
}
int Counter::operator--(){
	if (count <= min+step) { return count -= step }
	else
	{
		count = min;
		return count;
	}
}
int Counter::operator--(int x)
{
	int temp;
	temp = this->count;
	if (count != max) { count += step; }
	else count = min;

	return temp;
}
